<h1>Editing Book</h1>

<!--エラーメッセージ-->
<div class="errors-message">
  <% if @book.errors.any? %>
    <%= @book.errors.count %>error prohibited this book from being saved:
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
</div>
    

<%= form_with model: @book do |f| %>
  <label>Title</label>
  <%= f.text_field :title %>
  <label>Body</label>
  <%= f.text_area :body %>
  <%= f.submit 'Update Book' %>
<% end %>

<%= link_to 'Show',"/books/#{@book.id}" %>
<%= link_to 'Back',"/books" %>
<p class="notice">
  <%= flash[:notice] %>
</p>

<h1>Editing Book</h1>
<%= form_with model: @book do |f| %>
  <h2>Title</h2>
  <p><%= f.text_field :title %></p>
  <h2>Body</h2>
  <p><%= f.text_area :body %></p>
  <%= f.submit 'Update Book' %>
<% end %>

<%= link_to 'Show',"/books/#{@book.id}" %>
<%= link_to 'Back',"/books" %>